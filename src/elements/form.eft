>div
    #class = master
    -mpInfoBar
    >div
        #class = avatar
        >img
            #alt = {{avatarInfo}}
            #src = {{avatarURL}}
            #style = background-color: {{color = #777}}
    >form
        @submit.prevent = eventSubmit
        >div
            #class = guest-meta
            >input
                #type = text
                %value = {{valueName}}
                #autocomplete = nope
                #class = user-info base-color
                #placeholder = {{tipName}}
                #required = required
            >input
                #type = email
                %value = {{valueEmail}}
                #autocomplete = nope
                #class = user-info base-color
                #placeholder = {{tipEmail}}
                #required = required
            >input
                #type = url
                %value = {{valueHomePage}}
                #autocomplete = nope
                #class = user-info base-color
                #placeholder = {{tipSite}}
                #required = required
        >textarea
            %value = {{valueContent}}
            #placeholder = {{tipContent}}
            #required = required
        >input
            #class = submit
            #type = submit
            #value = {{btnSubmit}}
        >input
            #class = submit
            #type = button
            #value = {{btnSubmitting}}
            #style = display: {{displayPseudoCancel = none}};
        >input
            #class = cancel
            #type = button
            #value = {{btnCancel}}
            #style = display: {{displayCancel = none}};
            @click = eventCancel