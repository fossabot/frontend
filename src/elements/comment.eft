>div.{{masterBackground}}.{{focus}}
    -mpInfoBar
    >div.master
        #id = pomment-{{id}}
        >div.avatar
            #style = background-image: url({{avatar}})
        >div.meta
            -mpPostName
            >time
                #data-abs = {{absoluteTime}}
                .{{relativeTime}}
        >div.content
            .{{content}}
            >hr
            >a.{{showReply}}
                @click = eventReply
                .{{btnReply}}
            >span.barrier.{{showEdit}}
                .  |  
            >a.{{showEdit}}
                @click = eventEdit
                .{{btnEdit}}
        -mpEdit
    -mpForm
    >div.slave
        +slave