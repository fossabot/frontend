>form.guest-edit.{{hidden = hidden}}
    >textarea
        #autocomplete = nope
        #required = required
    >input.submit
        #type = submit
        #value = {{btnSubmit}}
        @click = eventSubmit
    >input.submit
        #type = button
        #value = {{btnSubmitting}}
        #style = display: {{displayPseudoCancel = none}};
    >input.cancel
        #type = button
        #value = {{btnCancel}}
        @click = eventCancel